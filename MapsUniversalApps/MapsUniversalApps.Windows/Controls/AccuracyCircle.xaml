<UserControl x:Name="userControl"
    x:Class="MapsUniversalApps.AccuracyCircle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MapsUniversalApps"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="48"
    d:DesignWidth="48">

    <Canvas>
        <Ellipse Name="accuracyCircle" Fill="Purple" Opacity="0.2" Stroke="Red" StrokeThickness="2" Width="{Binding Width, ElementName=userControl}" Height="{Binding Height, ElementName=userControl}"/>        
    </Canvas>
</UserControl>
